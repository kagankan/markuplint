{
	"compilerOptions": {
		"target": "ES2021",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"jsx": "react-jsx",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"references": [
		{ "path": "../packages/@markuplint/html-parser" },
		{ "path": "../packages/@markuplint/html-spec" },
		{ "path": "../packages/@markuplint/i18n" },
		{ "path": "../packages/@markuplint/ml-config" },
		{ "path": "../packages/@markuplint/ml-core" },
		{ "path": "../packages/@markuplint/parser-utils" },
		{ "path": "../packages/@markuplint/rules" }
	],
	"include": ["src"]
}
